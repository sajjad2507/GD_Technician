<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<!--    id name hired experience rating techImage-->

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/mGreen"
        app:cardCornerRadius="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="12dp">

            <ImageView
                android:id="@+id/techImg"
                android:layout_width="55dp"
                android:layout_height="120dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginBottom="12dp"
                android:src="@drawable/worker" />

        <TextView
            android:id="@+id/techName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Random Shah"
            android:textSize="15sp"
            android:layout_toLeftOf="@id/techImg"
            android:layout_alignParentLeft="true"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:gravity="left"/>

            <TextView
                android:id="@+id/techCat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Technicain Name"
                android:textSize="13sp"
                android:layout_below="@id/techName"
                android:layout_toLeftOf="@id/techImg"
                android:layout_alignParentLeft="true"
                android:textColor="#E6FFFFFF"
                android:gravity="left"/>

            <TextView
                android:id="@+id/techExp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone No."
                android:textSize="13sp"
                android:layout_below="@id/techCat"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@id/techImg"
                android:textColor="#E6FFFFFF"
                android:layout_marginTop="8dp"
                android:gravity="left"/>

            <TextView
                android:id="@+id/techExpNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5 Year's"
                android:textSize="13sp"
                android:layout_toLeftOf="@id/techImg"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/techExp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:gravity="left"/>

            <TextView
                android:id="@+id/hiringRate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rating"
                android:textSize="13sp"
                android:layout_below="@id/techExpNo"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@id/techImg"
                android:textColor="#E6FFFFFF"
                android:layout_marginTop="8dp"
                android:gravity="left"/>

            <TextView
                android:id="@+id/hiringRateNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:textSize="13sp"
                android:layout_toLeftOf="@id/techImg"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/hiringRate"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:gravity="left"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>